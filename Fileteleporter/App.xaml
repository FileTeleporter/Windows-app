<Application x:Class="Fileteleporter.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Fileteleporter"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="clickableLabel" TargetType="Label">
            <Setter Property="Foreground" Value="{Binding TextColor}"></Setter>
            <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="{Binding HoverColor}"></Setter>
            </Trigger>
            </Style.Triggers>
        </Style>

    </Application.Resources>
</Application>
